            <Cursor fx:constant="HAND" />
         </cursor>
         <font>
            <Font name="System Bold" size="12.0" />
         </font></TextField>
      <Label fx:id="lblInvalidDistance" layoutX="326.0" layoutY="231.0" text="**invalid (use only numbers &lt;10000)**" textFill="#d70c0c" visible="false">
