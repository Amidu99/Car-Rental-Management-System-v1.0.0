         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <JFXButton fx:id="btnAdd" alignment="CENTER" contentDisplay="TOP" graphicTextGap="0.0" layoutX="391.0" layoutY="370.0" onAction="#btnAddOnAction" prefHeight="69.0" prefWidth="68.0" text="ADD" textFill="#4353e5">
         <graphic>
            <ImageView fitHeight="44.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../asset/buttons/btn-add2.png" />
               </image>
