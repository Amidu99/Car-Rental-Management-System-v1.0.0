      <Label layoutX="601.0" layoutY="171.0" text="Return Date">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <DatePicker fx:id="datePicker" blendMode="MULTIPLY" editable="false" layoutX="601.0" layoutY="201.0" prefHeight="30.0" prefWidth="200.0">
