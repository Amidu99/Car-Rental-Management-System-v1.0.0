            <Cursor fx:constant="HAND" />
         </cursor>
      </JFXComboBox>
      <Label layoutX="326.0" layoutY="171.0" text="Distance (Km)*">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <TextField fx:id="txtDistance" blendMode="MULTIPLY" layoutX="326.0" layoutY="201.0" prefHeight="30.0" prefWidth="200.0">
